<!DOCTYPE html>
<html>
<head>
  <title>Hatch</title>
  <%= stylesheet_link_tag    "application" %>
  <%= javascript_include_tag "application" %>
  <%= javascript_include_tag 'jquery' %>
  <!--TODO: I don't know why application.js isn't including this, so doing it manually-->
  <%= javascript_include_tag 'jquery-fileupload' %>
  <%= csrf_meta_tags %>
  
  <script>
  	//for live_scaffold.js.erb
	var CONTROLLER_NAME = "<%= params[:controller] %>";
  </script>
  
  <%= yield :head %>
</head>
<body>
	
<div class="navbar navbar-inverse navbar-fixed-top">
  <div class="navbar-inner">
    <div class="container">
      <a class="btn btn-navbar" data-toggle="collapse" data-target=".nav-collapse">
        <span class="icon-bar"></span>
        <span class="icon-bar"></span>
        <span class="icon-bar"></span>
      </a>
      <%= link_to "Hatch", root_path, {:class => "brand"} %>
      <div class="nav-collapse collapse">
        <ul class="nav">
            <li><%= link_to "Home", root_path %></li>
            <li><%= link_to "Data Import", csv_import_path %></li>
            <li><%= link_to "Search", documents_path %></li>
            <li><%= link_to "Data Explorer", visualizations_path %></li>
            <li><%= link_to "Feeds", feeds_path %></li>
        </ul>
        <%= render 'layouts/login_items' %>
      </div><!--/.nav-collapse -->
    </div>
  </div>
</div>

<%
	#if the couchdb is not running, override alert
	if !is_couchdb_running?
		alert = 'Warning: couchdb is not reachable.'
	end
%>

<div class="container well" style="background-color: #dfdfdf;">
	<div class="well" style="background-color: #f5f5f5;">
	    <% if notice || alert %>
	        <%= javascript_include_tag "bootstrap-alert" %>
	    <% end %>
	    <% if notice %>
	    <div id="notice" class="alert alert-info">
	        <a class="close" data-dismiss="alert" href="#">&times;</a>
	        <%= notice %>
	    </div>
	    <% end %>
	    <% if alert %>
	    <div id="alert" class="alert">
	        <a class="close" data-dismiss="alert" href="#">&times;</a>
	        <%= alert %>
	    </div>
	    <% end %>

	<%= yield %>
	</div>
</div>

</body>

</html>
