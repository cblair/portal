<h1>Listing Users</h1>

<table>
  <tr>
    <th>Username</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @user_list.each do |user| %>
  <% if can? :manage, user %>
  <tr>
    <td> <%= user.email %> </td>
    <td> <%= link_to 'Edit', edit_each_user_role_path(user) %> </td>
  </tr>
  <% end %>
<% end %>
</table>

<hr>

<h1>Listing Roles</h1>

<p>This role list is for testing purposes only.  
   Roles should not be altered except by developers.</p>

<table>
  <tr>
    <th>Name</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @roles.each do |role| %>
  <tr>
    <td><%= role.name %></td>
    <td><%= link_to 'Show', role %></td>
    <td><%= link_to 'Edit', edit_role_path(role) %></td>
    <td><%= link_to 'Destroy', role, method: :delete, data: { confirm: 'Are you sure?' } %></td>
  </tr>
<% end %>
</table>

