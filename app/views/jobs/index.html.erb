<div class="hero-unit">
  <%- model_class = Job -%>
  <div class="page-header">
    <h1><%=t '.title', :default => model_class.model_name.human.pluralize %></h1>
  </div>

  <div class="clear-jobs" data-clear-jobs-source="<%= clear_jobs_path(format: "json") %>">
    <!--Gets binded an event by jobs.js.-->
    <%= link_to "Clear selected jobs", "#", :class => "btn btn-warning clear-jobs" %>
  </div>
  <br />

  <table id="jobs" class="table table-striped display" data-source="<%= jobs_url(format: "json") %>">
    <thead>
      <tr>
        <th><%= model_class.human_attribute_name(:id) %></th>
        <th><%= model_class.human_attribute_name(:description) %></th>
        <th><%= model_class.human_attribute_name(:user_id) %></th>
        <th>Status</th>
        <th><%= model_class.human_attribute_name(:created_at) %></th>
        <th><%t '.actions', :default => t("helpers.actions") %></th>
      </tr>
    </thead>
    <tbody>
    </tbody>
  </table>
</div>