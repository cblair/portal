  <ul>
    <li><%= collection.name %>
    	<%= link_to 'Show', collection %>
    	<%= link_to 'Edit', edit_collection_path(collection) %>
    	<%= link_to 'Destroy', collection, confirm: 'Are you sure?', method: :delete %>
    </li>
    
	<% collection.documents.each do |doc| %>
		<ul class="document row" id="<%= doc.id %>">
			<li class="span4"><%= doc.name %>
				<%= link_to 'Show', doc %>
    			<%= link_to 'Edit', edit_document_path(doc) %>
    			<%= link_to 'Destroy', doc, confirm: 'Are you sure?', method: :delete %>
			</li>
		</ul>
	<% end %>
    
    <% Collection.where(:collection_id => collection.id).each do |child_collection| %>
		<%= render :partial => "collection_new", :locals => {:collection => child_collection} %>
  	<% end %>
  </ul>