<h1>New collection</h1>


<%= form_for :collection, :url => { :action => "create" }, :html => {:class => "collection"} do |f| %>
<table>
<tr>
	<td>Name:</td>
	<td><%= f.text_field :name %></td>
</tr>
<tr>
	<td>Parent collection:</td>
  	<td>
  	<%= 
  		#f.select(:collection_id, get_all_collection_select_options, 
		#	{:include_blank => '(none)'} )
		f.select(:parent_id, get_all_collection_select_options, 
			{:include_blank => '(none)'} )
	%>
	</td>
</tr>
<tr>
	<td><%= f.submit %></td>
</tr>
</table>
<% end %>

<%= link_to 'Back', collections_path %>