<p id="notice"><%= notice %></p>

<div class="hero-unit">
	<h2>Collection</h2>

	<p>
	  <b>Name:</b>
	  <%= @collection.name %>
	</p>

	<p>
		<b>Owner:</b>
		<% if @collection.user %>
			<%= @collection.user.email %> 
		<% end %>
	</p>

	<h3>Documents</h3>

	<div>
		<%= 
			 render :partial => "collections/rec_collection_documents_render", :locals => {:documents => @documents}
		%>
	</div>
	<%= will_paginate @documents %>

	<%= link_to 'Edit', edit_collection_path(@collection) %> |
	<%= link_to 'Back', collections_path %>
</div>